Sub ManipulerCelluleActive()

    ' Mettre la valeur "Hello World" dans la cellule active
    ActiveCell.Value = "Hello World"
    
    'Afficher le contenu de la cellule active dans une boite de message
    MsgBox "Contenu de la cellule active : " & ActiveCell.Value
    
    'Effacer le contenue de la cellule active
    ActiveCell.ClearContents
    
    'Afficher a nouveau le contenu de la cellule active (apres avoirr efface son contenu)
    MsgBox "Nouveau contenu de la cellule active : " & ActiveCell.Value
    
End Sub
